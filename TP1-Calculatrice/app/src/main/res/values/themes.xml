<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calculatrice" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="DefaultOperatorsStyle">
        <item name="android:background">@drawable/formesopera</item>
        <item name="android:textSize">18dp</item>
    </style>
    <style name="DefaultNumbersStyle" parent="DefaultOperatorsStyle">
        <item name="android:background">@drawable/formesnbrs</item>
    </style>
    <style name="DefaultEqualStyle" parent="DefaultOperatorsStyle">
        <item name="android:background">@drawable/formeseq</item>
    </style>
    <style name="DefaultTextViewStyle">
        <item name="android:background">@color/grey</item>
        <item name="borderWidth">3dp</item>
    </style>
    <style name="DefaultStyleBg">
        <item name="android:background">@color/backgr</item>
    </style>
</resources>